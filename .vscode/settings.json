{
    "[groovy]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true
    },
    "groovy.format.enabled": true,
    "groovy.format.spaceAfterIf": true,
    "groovy.format.spaceAfterFor": true,
    "groovy.format.spaceAfterWhile": true,
    "groovy.format.spaceAfterSwitch": true,
    "groovy.format.spaceAfterCatch": true,
    "groovy.format.spaceAfterTry": true,
    "groovy.format.spaceAfterMethodCallName": false,
    "groovy.format.spaceAfterMethodCallParen": false,
    "editor.defaultFormatter": "naco-siren.gradle-language"
}